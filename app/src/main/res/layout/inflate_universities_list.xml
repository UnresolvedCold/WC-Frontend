<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_marginVertical="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/univ_name"
            android:layout_width="195dp"
            android:layout_height="21dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:layout_alignParentTop="true"
            android:text="Univ"
            android:textAppearance="@style/stanford_un"
            android:gravity="top"
            />

        <TextView
            android:id="@+id/univ_slogan"
            android:layout_width="250dp"
            android:layout_height="16dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="30dp"
            android:text="slogan"
            android:textAppearance="@style/masters_in_"
            android:gravity="top"
            />

        <TextView
            android:id="@+id/admited"
            android:layout_width="54dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="45dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="15dp"
            android:text="Admitted"
            android:textAppearance="@style/admited"
            android:gravity="top"
            />

        <View
            android:id="@+id/vector"
            android:layout_width="8.81dp"
            android:layout_height="15dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="398dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/ic_next"
            />

    </RelativeLayout>

</LinearLayout>