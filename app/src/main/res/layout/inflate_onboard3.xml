<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/onboarding_image"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <LinearLayout
            android:gravity="center"
            android:layout_width="103dp"
            android:layout_height="105.81dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="149dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="209dp"
            android:background="@drawable/rectangle_6">

            <ImageView
                android:src="@drawable/pic_loans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </ImageView>

        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:padding="10dp"
        android:gravity="center"
        android:id="@+id/onboarding_text1"
        android:layout_width="match_parent"
        android:textSize="20sp"
        android:textColor="#000"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:text="Everything you need"></TextView>

    <TextView
        android:gravity="center"
        android:id="@+id/onboarding_text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#4A4A4A"
        android:textSize="16sp"
        android:layout_marginBottom="60dp"
        android:text="Everything you need for your abroad education all in one place"></TextView>



</LinearLayout>