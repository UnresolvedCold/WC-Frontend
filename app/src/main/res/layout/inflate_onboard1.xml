<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/onboarding_image"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:src="@drawable/onboarding1"></ImageView>

    <TextView
        android:padding="10dp"
        android:gravity="center"
        android:id="@+id/onboarding_text1"
        android:layout_width="match_parent"
        android:textSize="20sp"
        android:textColor="#000"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:text="Exclusive Community"></TextView>

    <TextView
        android:gravity="center"
        android:id="@+id/onboarding_text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#4A4A4A"
        android:textSize="16sp"
        android:layout_marginBottom="60dp"
        android:text="Community of study abroad aspirants, admits and seniors. No Spammers!"></TextView>



</LinearLayout>