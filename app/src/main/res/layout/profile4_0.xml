<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profile4_0">

    <LinearLayout
        android:id="@+id/rectangle_2"
        android:layout_width="0dp"
        android:layout_height="46dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:paddingHorizontal="20dp"
        android:gravity="center_vertical">

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/ellipse_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            >
            <View
                android:id="@+id/vector"
                android:layout_width="16dp"
                android:layout_height="24dp"
                android:background="@drawable/ic_back"
                />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Education"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#000000"
            />

    </LinearLayout>



    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_marginTop="80dp"
        android:layout_height="wrap_content">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:gravity="top"
            android:text="Level"
            android:textAppearance="@style/course" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Bachelors"
            android:text="Bachelors"
            android:textAppearance="@style/university_2"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_marginTop="160dp"
        android:layout_height="wrap_content">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:gravity="top"
            android:text="School / College Name"
            android:textAppearance="@style/course" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Indian Institute of Technology Kharagpur"
            android:text="Indian Institute of Technology Kharagpur"
            android:textAppearance="@style/university_2"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_marginTop="240dp"
        android:layout_height="wrap_content">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:gravity="top"
            android:text="GPA / Percentage"
            android:textAppearance="@style/course" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="6"
            android:text="6"
            android:textAppearance="@style/university_2"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_marginTop="320dp"
        android:layout_height="wrap_content">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:gravity="top"
            android:text="Backlogs"
            android:textAppearance="@style/course" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="0"
            android:text="0"
            android:textAppearance="@style/university_2"
            />


    </LinearLayout>

    <Button
        android:id="@+id/profile_4_0_NextButton"
        android:layout_width="366dp"
        android:layout_height="47dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:textColor="#fff"
        android:textSize="20sp"
        android:text="NEXT"
        android:background="@drawable/frame_2">
    </Button>


</RelativeLayout>